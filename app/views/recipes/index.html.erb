<div class="container">
<div class="row">
  <%= form_tag :search_recipes, method: :get do %>
  <%= text_field_tag "q", params[:q], class: 'col s10', placeholder: '検索' %>
  <%= submit_tag "検索", class: 'btn col s2' %>
  <% end %>
</div>

  <h1>新着レシピ</h1>
  <% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <%= image_tag "/recipe_images/#{recipe.image}" %>
          <!-- <span class="card-title">Card Title</span> -->
        </div>
        <div class="card-content">
          <p><%= recipe.caption %></p>
          <p>投稿者：<%= recipe.user.name %></p>
        </div>
        <div class="card-action">
          <%= link_to recipe.title, recipe_path(recipe.id) %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>
