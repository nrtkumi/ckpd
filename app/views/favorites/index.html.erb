<div class="container">
  <h1>マイフォルダ</h1>
  <% @favs.each do |fav| %>
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <%= image_tag "/recipe_images/#{fav.recipe.image}" %>
          <!-- <span class="card-title">Card Title</span> -->
        </div>
        <div class="card-content">
          <p><%= fav.recipe.caption %></p>
          <p>投稿者：<%= fav.recipe.user.name %></p>
        </div>
        <div class="card-action">
          <%= link_to fav.recipe.title, recipe_path(fav.recipe.id) %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
